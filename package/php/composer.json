{
    "name": "program-knock/php",
    "description": "PHP implementations for programming practice problems",
    "type": "project",
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "ProgramKnock\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ProgramKnock\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "lint": "find src tests -name '*.php' -exec php -l {} \\;",
        "test": "php tests/runner.php"
    }
}
